{
  "name": "nba",
  "version": "0.2.0",
  "description": "A Node.js wrapper around the NBA's API",
  "repository": "https://github.com/nickb1080/nba.git",
  "main": "./lib",
  "scripts": {
    "update-teams": "node ./scripts/teams",
    "update-players": "node ./scripts/players",
    "update-data": "npm run update-teams; npm run update-players",
    "build": "browserify -s nba -o ./dist/nba.js ./; uglifyjs -cm -o ./dist/nba-min.js ./dist/nba.js",
    "build-light": "npm run clear-data; browserify -s nba -o ./dist/nba-light.js ./; uglifyjs -cm -o ./dist/nba-light-min.js ./dist/nba-light.js",
    "build-all": "npm run build-light; npm run update-data; npm run build",
    "watch": "watchify -s nba -o ./dist/nba.js ./",
    "clear-data": "node ./scripts/clear-data",
    "postinstall": "npm run update-data",
    "prepublish": "npm run build-all",
    "style": "jscs ./lib/*.js",
    "lint": "jshint ./lib/*.js",
    "sl": "npm run style; npm run lint",
    "test": "npm run sl; mocha -R spec ./test/test.js"
  },
  "author": "Nick Bottomley",
  "license": "MIT",
  "dependencies": {
    "es6-promise": "^1.0.0",
    "extend": "^1.3.0",
    "qs": "^2.3.1",
    "query-string": "^1.0.0",
    "request": "^2.42.0"
  },
  "browser": {
    "./lib/get-json.js": "./lib/get-jsonp.js",
    "./lib/get-script.js": "./lib/get-script-tag.js"
  },
  "browserify": {},
  "devDependencies": {
    "browserify": "^5.11.1",
    "chai": "^1.9.1",
    "es6ify": "^1.3.0",
    "jscs": "^1.6.2",
    "jshint": "^2.5.6",
    "mocha": "^1.21.4",
    "rewire": "^2.1.0",
    "sinon": "^1.10.3",
    "sinon-chai": "^2.5.0",
    "uglify-js": "^2.4.15",
    "watchify": "^1.0.2"
  }
}
